@model BAG.Models.U_EVNT_MASTER[]

@{
    ViewBag.Title = "Events Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="right_col" role="main">
    <div class="row top_tiles">
        <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <div class="tile-stats">
                <div class="icon">
                    <i class="fa fa-user fa-5x"></i>
                </div>
                <div class="count">@Model.Count()</div>
                <h3>Total Events</h3>
            </div>
        </div>
        <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <div class="tile-stats">
                <div class="icon">
                    <i class="fa fa-user fa-5x"></i>
                </div>
                <div class="count">0000</div>
                <h3>Active Events</h3>
            </div>
        </div>
        <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <div class="tile-stats">
                <div class="icon">
                    <i class="fa fa-users fa-5x"></i>
                </div>
                <div class="count">0000</div>
                <h3>Blocked Events</h3>
            </div>
        </div>
        <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <div class="tile-stats">
                <div class="icon">
                    <i class="fa fa-support fa-5x"></i>
                </div>
                <div class="count">0000</div>
                <h3>Today's Events</h3>
            </div>
        </div>
    </div>
    <div class="">
        <div class="clearfix"></div>
        <div class="panel panel-default">
            <div class="panel-heading" id="panelbackcolor">Events Details</div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-4 col-md-offset-9">
                        <form class="navbar-form" role="search" style="margin-bottom:0px;margin-top:0px;">
                            <div class="input-group add-on">
                                <input type="text" class="form-control" placeholder="Search" name="srch-term" id="srch-term">
                                <div class="input-group-btn">
                                    <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="x_content">
                            <div class="table-responsive table-fixed col-md-12  ">
                                <table id="datatable" class="table table-responsive table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th class="headeralign">Event Name</th>
                                            <th class="headeralign">Event Start Date</th>
                                            <th class="headeralign">Event End Date</th>
                                            <th class="headeralign">Event Location</th>
                                            <th class="headeralign">View More</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                            {
                                            <tr>
                                                <td align="center">@item.Event_Name</td>
                                                <td align="center">@item.Event_StartDate.ToString("dd/MM/yyyy")</td>
                                                <td align="center">@item.Event_EndDate.ToString("dd/MM/yyyy")</td>
                                                <td align="center">@item.Even_Location</td>
                                                <td align="center"><p data-placement="top" data-toggle="tooltip"><a class="btn btn-default  btn-xs buttoncolor" href='@Url.Action("EventProfile", "Events", new { Id = item.Event_Id})'> View More </a></p></td>
                                            </tr>
                                            }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>






