@model BAG.Models.EventsGroup
@{
    ViewBag.Title = "EventDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="modal fade" id="block" role="dialog">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Delete Comment</h4>
            </div>
            <div class="modal-body">
                <div class="blockmessage msg msg-info"><span class="glyphicon glyphicon-warning-sign"></span> Are you sure you want to delete this Comment ?</div><br>
                <button type="button" class="btn btn-success btn-md col-md-offset-2"><span class="glyphicon glyphicon-ok-sign"></span> Yes</button>&nbsp; &nbsp; &nbsp;
                <button type="button" class="btn btn-danger btn-md" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> No</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="edit" role="dialog">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Block Event</h4>
            </div>
            <div class="modal-body">
                <div class="blockmessage msg msg-info"><span class="glyphicon glyphicon-warning-sign"></span> Are you sure you want to block this Event ?</div><br>
                <button type="button" class="btn btn-success btn-md col-md-offset-2"><span class="glyphicon glyphicon-ok-sign"></span> Yes</button>&nbsp; &nbsp; &nbsp;
                <button type="button" class="btn btn-danger btn-md" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> No</button>
            </div>
        </div>
    </div>
</div>

<div class="right_col" role="main">
    <div class="row top_tiles">
        <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <div class="tile-stats">
                <div class="icon">
                    <i class="fa fa-user fa-5x"></i>
                </div>
                <div class="count">@Model.eventDetails.Event_Organizer</div>
                <h3>Organizer</h3>
            </div>
        </div>
        <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <div class="tile-stats">
                <div class="icon">
                    <i class="fa fa-inr fa-5x"></i>
                </div>
                <div class="count">@Model.eventDetails.Event_TotalFund</div>
                <h3>Total Fund</h3>
            </div>
        </div>
        <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <div class="tile-stats">
                <div class="icon">
                    <i class="fa fa-users fa-5x"></i>
                </div>
                <div class="count">@Model.eventDetails.Event_TotalContributors</div>
                <h3>Contributers</h3>
            </div>
        </div>
        <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <div class="tile-stats">
                <div class="icon">
                    <i class="fa fa-support fa-5x"></i>
                </div>
                <div class="count">@Model.eventDetails.Event_TotalComments</div>
                <h3>Comments</h3>
            </div>
        </div>
    </div>

    <div class="row" style="margin-bottom:10px;background-color:white;">
        <div class="col-md-12">
            <div class="col-md-4 bg_blur col-xs-12">
                <ul class="event-list picture_mob">
                    <li style="list-style:none;">
                        <time datetime="2014-02-25 2000" style="background-color:#5A738E; ">
                            <span class="day">@Model.eventDetails.Event_StartDate.ToString("dd")</span>
                            <span class="month">@Model.eventDetails.Event_StartDate.ToString("MMM")</span>
                            <span class="year">2014</span>
                            <span class="time">8:00 PM</span>
                        </time>
                    </li>
                </ul>
            </div>
            <div class="col-md-8  col-xs-12">
                <div class="header event_align">
                    <h1>@Model.eventDetails.Event_Name</h1>
                    <h4>at @Model.eventDetails.Event_Location</h4>
                    <span>@Model.eventDetails.Event_Desc</span>
                </div>
            </div>
        </div>
    </div>

    
    <div class="panel panel-default ">
        <div class="panel-heading" id="panelbackcolor">
            <form class="form" role="search">
                <span style="position:relative;top:8px;">Details</span>
            </form>
        </div>
        <div class="panel-body">
            <div class="col-md-3">
                <div class="panel panel-default sidebar-menu with-icons" style="border:none;">
                    <div class="panel-body">
                        <div class="list-group">
                            @foreach (var item in Model.eventWishList)
                            {
                                <div class="list-group-item">
                                    <a style="text-decoration:none; text-decoration:none;" href='@Url.Action("EventDetails", "Events", new { Id = item.WishList_Id})'><i class="fa fa-tasks fa-fw "></i> @item.WishList_Name</a>
                                </div>
                            }
                        </div>

                    </div>
                </div>
            </div>   <!-- Wish Lists-->
             @{Html.RenderAction("EventDetails_Sub1", "Events", new { Id = 1 /* Model.Uid */ });}
        </div>
    </div>
</div>


