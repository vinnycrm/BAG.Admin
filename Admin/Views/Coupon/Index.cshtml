@model BAG.Models.A_ADM_Coupon_Ref[]

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
<script>
        $(".dropdown-menu li a").click(function () {
            var selText = $(this).text();
            $(this).parents('.btn-group').find('.dropdown-toggle').html(selText + ' <span class="caret"></span>');
        });

        $("#btnSearch").click(function () {
            alert($('.btn-select').text() + ", " + $('.btn-select2').text());
        });
</script>
<div class="right_col" role="main">
    <div class="row top_tiles">
        <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <div class="tile-stats">
                <div class="icon">
                    <i class="fa fa-shopping-cart"></i>
                </div>
                <div class="count">asdf</div>
                <h3>Total Coupons</h3>
            </div>
        </div>
        <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <div class="tile-stats">
                <div class="icon">
                    <i class="fa fa-check-circle fa-5x"></i>
                </div>
                <div class="count">0000</div>
                <h3>Active Coupons</h3>
            </div>
        </div>
        <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <div class="tile-stats">
                <div class="icon">
                    <i class="fa fa-thumbs-o-down fa-5x"></i>
                </div>
                <div class="count">0000</div>
                <h3>Closed Coupens</h3>
            </div>
        </div>
        <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <div class="tile-stats">
                <div class="icon">
                    <i class=" fa fa-spinner fa-5x"></i>
                </div>
                <div class="count">0000</div>
                <h3>Blocked Coupens</h3>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="panel panel-default">
            <div id="panelbackcolor" class="panel-heading">
                <form class="form" role="search">
                    <span>Cupon details</span>
                    <div class="input-group add-on pull-right " style="margin-bottom:-15px;">
                        <button type="button" onclick="parent.location = '/Coupon/CreateCoupon'" class="btn btn-default">&nbsp;Add&nbsp;</button>
                    </div>
                </form>
            </div>
            <div class="panel-body" style="padding:0px; ">
                <br />
                <div class="container">
                    <div class="input-group add-on pull-right col-md-2">
                        <input type="text" class="form-control" placeholder="Search" name="srch-term" id="srch-term">
                        <div class="input-group-btn">
                            <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                        </div>
                    </div>
                </div>
                <div class="container">
                    <div class="table-responsive tablealign">
                        <br>
                        <table class="table table-bordered table-hover tablealign" style="background-color:white;">
                            <thead>
                                <tr>
                                    <th class="headeralign">Coupon Name</th>
                                    <th class="headeralign">Start Date</th>
                                    <th class="headeralign">End Date</th>
                                    <th class="headeralign">Status</th>
                                    <th class="headeralign">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var items in Model)
                                {
                                  <tr>
                                        <td align="center" style="vertical-align:middle;">@items.Coupon_Name</td>
                                        <td align="center" style="vertical-align:middle;">@items.Coupon_StartDate.ToString("dd/MM/yyyy")</td>
                                        <td align="center" style="vertical-align:middle;">@items.Coupon_EndDate.ToString("dd/MM/yyyy")</td>
                                        <td align="center" style="vertical-align:middle;">
                                            @if (@items.Coupon_Status == "1")
                                            {
                                                <span class="label label-success">Open</span>
                                            }
                                            else
                                            {
                                                <span class="label label-warning">Closed</span>
                                            }
                                      </td>
                                      <td align="center" style="vertical-align:middle;"><a href='@Url.Action("CouponDetails", "Coupon", new { Id = items.Coupon_Id})' class="btn btn-default">Edit</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div><!--end of .table-responsive-->
                </div>
            </div>
        </div>
    </div>
</div>


