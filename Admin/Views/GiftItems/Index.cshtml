@model BAG.Models.A_ADM_ITEM_MASTER[]
@{
    ViewBag.Title = "Gift Items Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="right_col" role="main">
    <div class="row top_tiles">
        <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <div class="tile-stats">
                <div class="icon">
                    <i class="fa fa-user fa-5x"></i>
                </div>
                <div class="count">0000</div>
                <h3>Total Events</h3>
            </div>
        </div>
        <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <div class="tile-stats">
                <div class="icon">
                    <i class="fa fa-user fa-5x"></i>
                </div>
                <div class="count">0000</div>
                <h3>Active Events</h3>
            </div>
        </div>
        <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <div class="tile-stats">
                <div class="icon">
                    <i class="fa fa-users fa-5x"></i>
                </div>
                <div class="count">0000</div>
                <h3>Blocked Events</h3>
            </div>
        </div>
        <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <div class="tile-stats">
                <div class="icon">
                    <i class="fa fa-support fa-5x"></i>
                </div>
                <div class="count">0000</div>
                <h3>Today's Events</h3>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="panel panel-default">
        <div class="panel-heading" id="panelbackcolor">Gift Items Details</div>
        <div class="panel-body">
            <div class="row table-responsive tablealign">
                <table class="table table-bordered table-hover" style="background-color:white;">
                    <form class="navbar-form" role="search">
                        <div class="input-group add-on pull-right col-md-3">
                            <input type="text" class="form-control" placeholder="Search" name="srch-term" id="srch-term">
                            <div class="input-group-btn">
                                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                            </div>
                        </div>
                        <div class="input-group add-on pull-right">
                            <a href='@Url.Action("AddItems", "GiftItems")' type="button" class="btn btn-default">
                                <i class="fa fa-plus" aria-hidden="true"></i>&nbsp; New Items
                            </a>
                        </div>
                    </form>
                    <thead>
                        <tr>
                            <th class="headeralign">Item Picture</th>
                            <th class="headeralign">Item Name</th>
                            <th class="headeralign">Item Price</th>
                            <th class="headeralign">Item Status</th>
                            <th class="headeralign">View More</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var items in Model)
                        {
                            

                                <tr>
                                    <td align="center"><a href='@Url.Action("ItemDetails", "GiftItems", new { Id = items.Item_ID})'><img src='@items.Item_PicUrl' alt="connot displayed" class="img-responsive img-zoom" style="height:50px;"></a></td>
                                    <td align="center" style="vertical-align:middle;">@items.Item_Name</td>
                                    <td align="center" style="vertical-align:middle;">@items.Item_Price</td>
                                    <td align="center">
                                          @if (@items.Item_Status == "1")
                                            {
                                                <span class="label label-success" align="center" style="vertical-align:middle;">Active</span>
                                            }
                                          else
                                            {
                                                <span class="label label-warning" align="center" style="vertical-align:middle;">Blocked</span>
                                            }
                                    </td>
                                   <td align="center">
                                        <button class="btn btn-default  btn-xs buttoncolor  " onclick="parent.location = '@Url.Action("ItemDetails", "GiftItems", new { Id = items.Item_ID})'">View More </button> 
                                    </td>
                                </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
